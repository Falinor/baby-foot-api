{
  "name": "babyfoot-api",
  "version": "0.11.0",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "npm run test:unit:watch",
    "build": "cross-env BABEL_ENV=production babel src -d dist",
    "release": "standard-version --no-verify",
    "serve": "node dist/index.js",
    "start": "babel-node src/index.js",
    "test": "npm run test:unit && npm run test:api",
    "test:api": "cross-env BABEL_ENV=test ava --serial \"test/api/**/matches.test.js\"",
    "test:api:watch": "npm run test:api -- --watch",
    "test:unit": "cross-env BABEL_ENV=test ava \"test/unit/**/*.test.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "cover": "nyc -r lcov -r text-lcov -a npm run test:unit",
    "postcover": "opn coverage/lcov-report/index.html",
    "lint": "eslint src",
    "docs": "esdoc && opn docs/index.html",
    "precommit": "npm run lint && npm run test:unit",
    "commitmsg": "validate-commit-msg"
  },
  "ava": {
    "verbose": false,
    "failFast": false,
    "failWithoutAssertions": true,
    "concurrency": 5,
    "timeout": "30s",
    "tap": false,
    "powerAssert": true,
    "require": [
      "@babel/register"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.39",
    "@babel/core": "^7.0.0-beta.39",
    "@babel/node": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "@babel/register": "^7.0.0-beta.39",
    "ava": "^0.21.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "esdoc": "^1.0.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-ava": "^4.5.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "nodemon": "^1.11.0",
    "nyc": "^11.4.1",
    "opn-cli": "^3.1.0",
    "sinon": "^2.2.0",
    "standard-version": "^4.3.0",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "awilix": "^3.0.1",
    "bunyan": "^1.8.12",
    "http-status": "^1.0.1",
    "koa": "^2.4.1",
    "koa-router": "^7.4.0",
    "mongodb": "^3.0.2",
    "morgan": "^1.8.2"
  }
}
