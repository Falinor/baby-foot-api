{
  "name": "babyfoot-api",
  "version": "0.7.2",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "nodemon -w src --exec babel-node src/index.js",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "start": "npm run dev",
    "test": "ava",
    "test:api": "npm test -- \"test/api/**/*.test.js\"",
    "test:api:watch": "npm run test:api -- --watch",
    "test:unit": "npm test -- \"test/unit/**/*.test.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "coverage": "npm test",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint src",
    "docs": "npm run docs:api && npm run postdocs",
    "docs:api": "nodemon -w docs/v3 -e yml --exec 'json-refs resolve -f docs/v3/openapi.yml > docs/v3/openapi.json'",
    "docs:code": "esdoc",
    "postdocs": "opn docs/index.html"
  },
  "ava": {
    "verbose": false,
    "failFast": false,
    "failWithoutAssertions": true,
    "concurrency": 5,
    "timeout": "5s",
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "esdoc": "^1.0.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "nodemon": "^1.11.0",
    "opn-cli": "^3.1.0",
    "sinon": "^2.2.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "arangojs": "^5.7.0",
    "json-refs": "^3.0.0",
    "morgan": "^1.8.2"
  }
}
