{
  "name": "babyfoot-api",
  "version": "0.3.0",
  "main": "src",
  "private": true,
  "scripts": {
    "start": "npm run docs && npm run dev",
    "dev": "nodemon -i src/\"*.test.js\" -w docs -w src --exec babel-node src/index.js",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "test": "NODE_ENV=test LOG_LEVEL=warn ava",
    "test:unit": "npm test \"src/**/!(index).test.js\"",
    "test:integration": "npm test \"src/**/index.test.js\"",
    "test:watch": "npm test -- --watch",
    "coverage": "npm test",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint src",
    "docs": "npm run docs:api && npm run postdocs",
    "docs:es": "esdoc",
    "docs:api": "json-refs resolve docs/swagger.yml > docs/swagger.json",
    "postdocs": "opn docs/index.html"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.js",
      "!node_modules",
      "!dist"
    ],
    "verbose": true,
    "failFast": false,
    "failWithoutAssertions": true,
    "concurrency": 5,
    "timeout": "5s",
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "esdoc": "^0.5.2",
    "esdoc-standard-plugin": "^0.0.3",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.11.0",
    "opn-cli": "^3.1.0",
    "sinon": "^2.2.0",
    "supertest": "^3.0.0",
    "uuid": "^3.1.0"
  },
  "dependencies": {
    "ajv": "^5.1.5",
    "arangojs": "^5.6.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "json-refs": "^3.0.0",
    "morgan": "^1.8.2",
    "swagger-ui-express": "^2.0.1",
    "winston": "^2.3.1"
  }
}
