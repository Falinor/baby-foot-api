{
  "name": "babyfoot-api",
  "version": "0.9.0",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "npm run test:unit:watch",
    "build": "babel src -d dist",
    "release": "standard-version --no-verify",
    "serve": "node dist/index.js",
    "start": "babel-node src/index.js",
    "test": "npm run test:unit && npm run test:api",
    "test:api": "ava \"test/api/**/*.test.js\"",
    "test:api:watch": "npm run test:api -- --watch",
    "test:unit": "ava \"test/unit/**/*.test.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm run test:unit",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint src",
    "docs": "npm run docs:api && npm run postdocs",
    "docs:api": "nodemon -w docs/v3 -e yml --exec 'json-refs resolve -f docs/v3/openapi.yml > docs/v3/openapi.json'",
    "docs:code": "esdoc",
    "postdocs": "opn docs/index.html",
    "precommit": "npm run lint && npm run test:unit",
    "commitmsg": "validate-commit-msg"
  },
  "ava": {
    "verbose": false,
    "failFast": false,
    "failWithoutAssertions": true,
    "concurrency": 5,
    "timeout": "5s",
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "esdoc": "^1.0.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "nodemon": "^1.11.0",
    "nyc": "^11.4.1",
    "opn-cli": "^3.1.0",
    "sinon": "^2.2.0",
    "standard-version": "^4.3.0",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "arangojs": "^5.7.0",
    "awilix": "^3.0.1",
    "bunyan": "^1.8.12",
    "eslint-plugin-ava": "^4.5.0",
    "http-status": "^1.0.1",
    "json-refs": "^3.0.0",
    "koa": "^2.4.1",
    "koa-router": "^7.4.0",
    "morgan": "^1.8.2"
  }
}
