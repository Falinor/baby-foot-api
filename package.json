{
  "name": "babyfoot-api",
  "version": "0.14.0",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "npm run test:watch",
    "build": "cross-env BABEL_ENV=production babel src -d dist",
    "release": "standard-version",
    "serve": "node dist/index.js",
    "start": "babel-node src/index.js",
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "integ": "ava --serial \"integ/**/*.test.js\"",
    "integ:watch": "npm run integ -- --watch",
    "cover": "nyc -r lcov -r text-lcov -a npm test",
    "postcover": "opn coverage/lcov-report/index.html",
    "lint": "eslint src --fix",
    "precommit": "lint-staged && npm test",
    "commitmsg": "validate-commit-msg"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "test"
    ],
    "sources": [
      "src",
      "test",
      "integ"
    ],
    "verbose": true,
    "failFast": false,
    "failWithoutAssertions": true,
    "timeout": "30s",
    "tap": false,
    "powerAssert": true,
    "require": [
      "@babel/register"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "ava": "^1.3.1",
    "babel-eslint": "^8.2.3",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-ava": "^4.5.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.4.1",
    "prettier": "^1.13.5",
    "sinon": "^4.4.8",
    "standard-version": "^4.3.0",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "awilix": "^4.0.1",
    "bunyan": "^1.8.12",
    "convict": "^4.4.0",
    "dotenv": "^6.2.0",
    "es6-error": "^4.1.1",
    "http-status": "^1.3.1",
    "joi": "^14.3.1",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lodash.defaultsdeep": "^4.6.0",
    "mongodb": "^3.1.10",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2"
  }
}
