{
  "name": "babyfoot-api",
  "version": "0.13.0",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "npm run test:unit:watch",
    "build": "cross-env BABEL_ENV=production babel src -d dist",
    "release": "standard-version",
    "serve": "node dist/index.js",
    "start": "babel-node src/index.js",
    "test": "npm run test:api && npm run cover",
    "test:api": "cross-env BABEL_ENV=test ava --serial \"test/api/**/matches.test.js\"",
    "test:api:watch": "npm run test:api -- --watch",
    "test:unit": "cross-env BABEL_ENV=test ava \"test/unit/**/*.test.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "cover": "nyc -r lcov -r text-lcov -a npm run test:unit",
    "postcover": "opn coverage/lcov-report/index.html",
    "lint": "eslint src --fix",
    "precommit": "lint-staged && npm run test:unit",
    "commitmsg": "validate-commit-msg"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "ava": {
    "verbose": false,
    "failFast": false,
    "failWithoutAssertions": true,
    "concurrency": 5,
    "timeout": "30s",
    "tap": false,
    "powerAssert": true,
    "require": [
      "@babel/register"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.39",
    "@babel/core": "^7.0.0-beta.39",
    "@babel/node": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "@babel/preset-flow": "^7.0.0-beta.51",
    "@babel/register": "^7.0.0-beta.39",
    "ava": "^0.25.0",
    "babel-eslint": "^8.2.3",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-ava": "^4.5.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.4.1",
    "prettier": "^1.13.5",
    "sinon": "^4.4.8",
    "standard-version": "^4.3.0",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "awilix": "^3.0.1",
    "bunyan": "^1.8.12",
    "http-status": "^1.0.1",
    "joi": "^13.4.0",
    "koa": "^2.4.1",
    "koa-router": "^7.4.0",
    "mongodb": "^3.0.2",
    "morgan": "^1.8.2"
  }
}
